}
@model Bootstrap5ToastExample.Classes.MessageContainer


<div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">

    <div class="toast text-white bg-primary border-0" id="topToast" role="alert"
         aria-live="assertive" aria-atomic="true">

        <div class="d-flex">
            <div class="toast-body">
                @Model.Top
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>

    <div class="toast text-white bg-danger border-0" id="bottomToast" role="alert" aria-live="assertive" aria-atomic="true">

        <div class="d-flex">
            <div class="toast-body">
                @Model.Bottom
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>

</div>

